{
  "name": "cerbero",
  "version": "1.0.0",
  "description": "Gestión de partes disciplinarios ",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build:linux": "electron-builder -l",
    "build:win": "electron-builder -w"
  },
  "author": "Antonio Gómez",
  "license": "ISC",
  "build": {
    "appId": "juandeavila.test",
    "asar": "true",
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb"
      ],
      "category": "Network",
      "icon": "./build/icon/",
      "publish": [
        "github"
      ]
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable",
      "plugs": [
        "default"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "./build/icon/icon.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "fs-extra": "^11.1.1",
    "mssql": "^9.1.1",
    "mysql": "^2.18.1",
    "pdfkit": "^0.13.0"
  }
}
